<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">
                Visualizar Cliente
            </h2>
        </div>
    </div>

<div class="row">  
      <div class="col-lg-5 form-group"> 
          <label class = 'control-label'>Nome</label>
          <input readonly="true" class = 'form-control' value="<%= @cliente.nome %>" />  
      </div>
 <div class="col-lg-5 form-group">
          <label class = 'control-label'>Cpf</label>
          <input readonly="true" class = 'form-control' value="<%= @cliente.cpf %>" />
       </div>

<div class="col-lg-5 form-group">
          <label class = 'control-label'>Endereco</label>
          <input readonly="true" class = 'form-control' value="<%= @cliente.endereco %>" />
       </div>

<div class="col-lg-3 form-group">   
          <label class = 'control-label'>Email</label>
          <input readonly="true" class = 'form-control' value="<%= @cliente.email %>" />
      </div>

 <div class="row">
                <div class="col-lg-7 form-group">  
                  <%= link_to 'Alterar Cliente', edit_cliente_path(@cliente), :class => "btn btn-primary colorprimarybtn" %>
                  <%= link_to 'Voltar',  clientes_path, :class => "btn btn-primary colorprimarybtn"%>
                </div>
    </div>
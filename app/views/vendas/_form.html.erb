<%= form_with(model: venda) do |form| %>
  <% if venda.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(venda.errors.count, "error") %> prohibited this venda from being saved:</h2>

      <ul>
        <% venda.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
       <div class="col-lg-6 form-group">   
           <%= form.label :data, :class => 'control-label required' %>
           <%= form.text_field :data,  :class => 'form-control' %>
       </div>

  
       <div class="col-lg-5 form-group">   
           <%= form.label :cpf, :class => 'control-label' %>
           <%= form.text_field :cpf,  :class => 'form-control' %>
       </div>

       <div class="col-lg-3 form-group">   
           <%= form.label :total, :class => 'control-label required' %>
           <%= form.text_field :total,  :class => 'form-control' %>
       </div>

  
       <div class="col-lg-3 form-group">   
           <%= form.label :tipoPagamento, :class => 'control-label required' %>
           <%= form.text_field :tipoPagamento,  :class => 'form-control' %>
       </div>

  
       <div class="col-lg-4 form-group">   
           <%= form.label :cliente_id, :class => 'control-label required' %>
           <%= form.collection_select :cliente_id, Cliente.all, :id, :nome, {:prompt => 'Selecionar'}, :class => 'form-control' %>
       </div>
       </div>
  
       <div class="row">
       <div class="col-lg-6 form-group"> 
           
            <%= link_to 'Voltar', vendas_path, :class => "btn btn-primary colorprimarybtn"%>
             <input type="submit" name="commit" class="btn btn-primary colorprimarybtn" value="Salvar" data-disable-with="Salvando" />
          </div>
      </div>
<% end %>